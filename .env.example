# MySQL 資料庫設定
DB_HOST=db
DB_USER=root
DB_PASSWORD=root123
DB_NAME=judge_questions

# MySQL 容器 root 密碼（可與 DB_PASSWORD 一致）
MYSQL_ROOT_PASSWORD=root123

OPENAI_API_KEY=your_api_key

QDRANT_URL=http://127.0.0.1:6333
RAG_COLLECTION=knowledge_chunks
LLM_MODEL=gpt-4o-mini
CHUNK_TOKENS=500
CHUNK_OVERLAP=80
# 新增來源標籤（供檢索 filter）
RAG_ALLOWED_SOURCES=mslearn,llvm
# 沒命中或分數太低時，允許改用模型常識回答
RAG_ALLOW_MODEL_FALLBACK=1
# 後備回答用的模型與參數
RAG_FALLBACK_MODEL=gpt-4o-mini
RAG_FALLBACK_TEMP=0.3